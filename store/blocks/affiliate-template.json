{
  "affiliate-template": {
    "children": ["flex-layout.row#affiliate-valid-template-acess"]
  },
  "flex-layout.row#affiliate-valid-template-acess": {
    "props": {
      "blockClass": "affiliate-valid-template-acess"
    },
    "children": ["flex-layout.col#valid-template"]
  },
  "flex-layout.col#valid-template": {
    "children": [
      "flex-layout.row#affiliate-banner",
      "flex-layout.row#components-valid-template",
      "affiliate-profile-button",
      "search-result-layout.customQuery#affiliate"
    ]
  },
  "flex-layout.row#components-valid-template": {
    "props": {
      "blockClass": "components-valid-template"
    },
    "children": ["affiliate-quick-acess", "affiliate-coupon"]
  },
  "flex-layout.row#affiliate-banner": {
    "title": "Banner de afiliado",
    "props": {
      "blockClass": ["container", "affiliate-banner"]
    },
    "children": ["affiliate-image"]
  },
  "search-result-layout.customQuery#affiliate": {
    "props": {
      "querySchema": {
        "skusFilter": "ALL_AVAILABLE",
        "simulationBehavior": "default",
        "queryField": "137",
        "mapField": "productClusterIds",
        "facetsBehavior": "Dynamic"
      }
    },
    "blocks": [
      "search-result-layout.desktop",
      "search-result-layout.mobile",
      "search-not-found-layout"
    ]
  }
}
